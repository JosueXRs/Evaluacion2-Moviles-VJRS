<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="130dp"
                app:cardCornerRadius="10dp"
                app:cardBackgroundColor="@color/fondo">

                <ImageView
                    android:id="@+id/imgPlate"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:scaleType="centerCrop"
                    android:layout_marginTop="-10dp"
                    android:src="@drawable/imagen1"/>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/textPlateTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="16sp"
                android:textStyle="bold"
                android:text="Pizza DMarco"
                android:textColor="@color/fondo"/>

            <TextView
                android:id="@+id/textPlateCategory"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="14sp"
                android:textStyle="italic"
                android:text="Pizzas"
                android:textColor="@color/fondo"/>

            <TextView
                android:id="@+id/textPlatePrice"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:ellipsize="end"
                android:maxLines="1"
                android:textSize="12sp"
                android:textStyle="bold"
                android:text="S/25.00"
                android:textColor="@color/grey"/>

            <TextView
                android:id="@+id/textPlateDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:ellipsize="end"
                android:maxLines="5"
                android:textSize="12sp"
                android:text="Lorem iroin efficitur venenatis leo et vulputate. Morbi et malesuada nunc, iaculis elementum purus. Donec euismod vel enim in rutrum. Integer euismod sem non varius suscipit. In sit amet gravida velit."
                android:textColor="@color/grey" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>